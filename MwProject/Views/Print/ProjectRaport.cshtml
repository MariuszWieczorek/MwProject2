        </div>
    </div>
    <div class="row ">
        <div class="col-12 mt-3 mb-2 border rounded">
            @await Html.PartialAsync("~/Views/Print/_ProjectTechnicalPropertiesOnReportPartial.cshtml", Model)
        </div>
    </div>
    <div class="row ">
        <div class="col-12 mt-3 mb-2 border rounded">
            @await Html.PartialAsync("~/Views/Print/_ProjectEconomicRequirementsOnReportPartial.cshtml", Model)
        </div>
    </div>
    <div class="row ">
        <div class="col-12 mt-3 mb-2 border rounded">
            @await Html.PartialAsync("~/Views/Print/_ProjectQualityRequirementsOnReportPartial.cshtml", Model)
        </div>
    </div>

    <div class="row ">
        <div class="col-12 mt-3 mb-2 border rounded">
