@model MwProject.Core.ViewModels.ProjectViewModel

@{
    Layout = null;
    ViewBag.Title = "ProjectTemplate";
}

<link href="@Url.Content("~/lib/bootstrap/dist/css/bootstrap.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/css/PrintProject.css")" rel="stylesheet" type="text/css" />

<div class="container" style="width: 800px;">

    <!-- Nagłówek Wydruku -->
    <div class="row">
        <div class="col-4 border-start border-top border-bottom border-3 border-dark">
            <div class="row align-items-center" style="height: 100px;">
                <div>
                    <img src="@Url.Content("~/images/logo_kabat.png")" style="width: 200px;" />
                </div>
            </div>
        </div>

        <div class="col-6  border border-3 border-dark">
            <div class="row align-items-center" style="height: 100px;">
                <h2 class="mb-3 mt-4 display-4">
                    @Model.Project.Number
                </h2>
            </div>
        </div>

        <div class="col-2 border-end border-top border-bottom border-3 border-dark">
            <div class="row align-items-center" style="height: 100px;">
                <div>
                    @Model.Project.Category.DocumentSymbol
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 mt-3 mb-2 border rounded">
            @await Html.PartialAsync("~/Views/Print/_ProjectMainOnReportPartial.cshtml", Model)
        </div>
    </div>

    <div class="row ">
        <div class="col-12 mt-3 mb-2 border rounded">
            @await Html.PartialAsync("~/Views/Print/_ProjectDescriptionOnReportPartial.cshtml", Model)
        </div>
    </div>

    <div class="row ">
        <div class="col-12 mt-3 mb-2 border rounded">
            @await Html.PartialAsync("~/Views/Print/_ProjectPurposeOnReportPartial.cshtml", Model)
