@model MwProject.Core.ViewModels.UsersViewModel

@{
    ViewData["Title"] = "Użytkownicy";
}

<h1>Użytkownicy</h1>


<div id="usersTable">
    <table class="table mt-3 table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Imię</th>
                <th scope="col">Nazwisko</th>
                <th scope="col">Stanowisko</th>
                <th scope="col">Adm</th>
                <th scope="col">Edit</th>
                <th scope="col">Akcept</th>
                <th scope="col">Potw</th>
                <th scope="col">Tkw</th>
                <th scope="col">Sprz</th>
                <th scope="col">Jakość</th>
                <th scope="col">Eko</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Users != null && Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
            <tr>


                <td>

                    <a href="@Url.Action("SingleUser", "User",
                                    new { id = user.Id })"
                       class="font-weight-bold">@user.Email</a>

                </td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Possition</td>

                <td>
                    @if (user.AdminRights)
                    {
                        <div>
                            <img src="@Url.Content("~/images/checked.png")" alt="logo" width="16" height="16" class="img-checked-sm" />
                        </div>
                    }
                </td>

                <td>
                    @if (user.CanModifyProject)
                    {
                        <div>
                            <img src="@Url.Content("~/images/checked.png")" alt="logo" width="16" height="16" class="img-checked-sm" />
                        </div>
                    }
                </td>

                <td>
                    @if (user.CanAcceptProject)
                    {
                        <div>
                            <img src="@Url.Content("~/images/checked.png")" alt="logo" width="16" height="16" class="img-checked-sm" />
                        </div>
                    }
                </td>

                <td>
                    @if (user.CanConfirmProject)
                    {
                        <div>
                            <img src="@Url.Content("~/images/checked.png")" alt="logo" width="16" height="16" class="img-checked-sm" />
                        </div>
                    }
                </td>

                <td>
                    @if (user.CanConfirmCalculations)
                    {
                        <div>
                            <img src="@Url.Content("~/images/checked.png")" alt="logo" width="16" height="16" class="img-checked-sm" />
                        </div>
                    }
                </td>

                <td>
                    @if (user.CanConfirmEstimatedSales)
                    {
                        <div>
                            <img src="@Url.Content("~/images/checked.png")" alt="logo" width="16" height="16" class="img-checked-sm" />
                        </div>
                    }
                </td>

                <td>
                    @if (user.CanConfirmQualityRequirements)
                    {
                        <div>
                            <img src="@Url.Content("~/images/checked.png")" alt="logo" width="16" height="16" class="img-checked-sm" />
                        </div>
                    }
                </td>

                <td>
                    @if (user.CanConfirmEconomicRequirements)
                    {
                        <div>
                            <img src="@Url.Content("~/images/checked.png")" alt="logo" width="16" height="16" class="img-checked-sm" />
                        </div>
                    }
                </td>

            </tr>
                }

            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">
                        Brak użytkowników
                    </td>
                </tr>
            }


        </tbody>

    </table>
</div>

@section Scripts
{
    <script type="text/javascript">

        // Usuwanie kategorii
        function deleteUser(id, btn) {
            if (!confirm("Czy na pewno chcesz usunąć użytkownika ?"))
                return;

            $.ajax({
                type: 'POST',
                url: "@Url.Action("DeleteUser", "User")",
                data: {
                    Id: id
                },
                success: function (data) {
                    if (data.success) {
                        // usuwanie z tabeli w html'u
                        var row = btn.parentNode.parentNode;
                        row.parentNode.removeChild(row);
                    }
                    else {
                        alert(data.message + ' Akcja w kontrolerze zwróciła błąd' );
                    }
                },
                error: function (data) {
                    alert(data.message + ' Nie znaleziono Akcji ');
                },
                dataType: 'json'

            });
        }
        // --------------------------------------------
    </script>
}
