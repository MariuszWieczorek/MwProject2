@model MwProject.Core.ViewModels.ProjectViewModel
@* Widok częściowy z kalkulacjami powiązanymi z projektem *@

@{
    var projectCalculations = Model.Project.Calculations;
}

<div class="row">


    <div class="row g-0">
        <div class="col-12 mb-2">
            <h4>Kalkulacja Kosztów TKW</h4>
        </div>

        <div class="col-12">
            @if (Model.Project.IsCalculationConfirmed == false)
            {
                <button class="btn btn-outline-success btn-sm"
                        onclick='window.location.href = "@Url.Action("Calculation","Calculation",new { projectId = Model.Project.Id })"'>
                    Dodaj
                </button>



                <button class="btn btn-outline-warning btn-sm"
                        onclick="confirmCalculation('@Model.Project.Id',this)">
                    Akceptuj
                </button>

            }
            else
            {
                @if (Model.Project.IsAccepted == false)
                {
                    <button class="btn btn-outline-warning btn-sm"
                            onclick="withdrawConfirmationOfCalculation('@Model.Project.Id',this)">
                        Wycofaj Potwierdzenie
                    </button>
                }
            }

        </div>
    </div>

    @if (projectCalculations != null && projectCalculations.Any())
    {

        <table class="table table-hover table-striped mt-3 mb-5">
            <thead class="table-success">
                <tr>
                    <th scope="col">TKW</th>
                    <th scope="col">CKW</th>
                    <th scope="col">Koszty Materiałów</th>
                    <th scope="col">Koszty Robocizny</th>
                    <th scope="col">Koszty Pakowania</th>
                    <th scope="col">Narzut</th>
                    <th scope="col">Koszty Ogólne %</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var position in projectCalculations)
                {
                    <tr>
                        <td>
                            @if (Model.Project.IsCalculationConfirmed == false)
                            {
                                <a class="font-weight-bold"
                                   href="@Url.Action("Calculation", "Calculation", new { projectId = position.ProjectId, Id = position.Id })">
                                    @position.Tkw.ToString("c")
                                </a>
                            }
                            else
                            {
                                @position.Tkw.ToString("c")
                            }
                        </td>
                        <td>@position.Ckw.ToString("c")</td>
                        <td>@position.MaterialCosts.ToString("c")</td>
                        <td>@position.LabourCosts.ToString("c")</td>
                        <td>@position.PackingCosts.ToString("c")</td>
                        <td>@position.Markup.ToString("c")</td>
                        <td>@position.GeneralCostsInPercent.ToString("n")</td>
                        <td align="right">
                            @if (Model.Project.IsCalculationConfirmed == false)
                            {
                                <button class="btn btn-outline-danger btn-sm"
                                        onclick="deleteCalculation('@position.ProjectId','@position.Id',this)">
                                    Usuń
                                </button>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
</div>

@section scripts
{
    <script type="text/javascript">
                              // wszystkie skrypty w widoku z którego został wywołany ten widok częściowy
                              // deleteCalculation()
    </script>
}