@model MwProject.Core.ViewModels.ProjectViewModel

@* 
    Widok do edycji wymagań na osobnym widoku
    W zależności od ViewBag.Type wyświetlamy informacje ekonomiczne lub jakościwoe
*@

@{
    ViewBag.Title = Model.Heading;
    bool NewProject = (Model.Project.Id == 0);
}

<h2>@Model.Heading</h2>


<button class="btn btn-primary btn-lg mt-3 mb-3"
        onclick='window.location.href = "@Url.Action("Project","Project", new { id = Model.Project.Id })"'>
    Wróć do projektu
</button>

<div class="row ">


        <div class="col-12">
            @if (Model.Project.Id != 0)
            {

                <div class="mt-3 mb-5">
                    @await Html.PartialAsync("~/Views/ProjectRequirement/_ProjectRequirementsPartial2.cshtml", Model)
                </div>

            }
    </div>
</div>

