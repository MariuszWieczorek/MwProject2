@model MwProject.Core.ViewModels.RequirementViewModel

@{
    ViewBag.Title = Model.Heading;
}

<h1>@Model.Heading</h1>


@using (Html.BeginForm("Requirement", "Requirement"))
{
    <p class="alert alert-info mt-4 mb-4">
        Pole Nazwa jest <strong>wymagane</strong>
    </p>

    @Html.AntiForgeryToken()
    @Html.HiddenFor(x => x.Requirement.Id)

    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.Requirement.Name)
        @Html.TextBoxFor(x => x.Requirement.Name, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(x => x.Requirement.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Requirement.Type)
        @Html.TextBoxFor(x => x.Requirement.Type, new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(x => x.Requirement.Type)
    </div>

    <button type="submit" class="btn btn-primary btn-lg mt-2">Zapisz</button>

}



